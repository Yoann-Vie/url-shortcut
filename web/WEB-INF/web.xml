<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_4_0.xsd"
           version="4.0">

    <error-page>
        <error-code>404</error-code>
        <location>/404.html</location>
    </error-page>

    <env-entry>
        <env-entry-name>db/serverName</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>0.0.0.0</env-entry-value>
    </env-entry>
    <env-entry>
        <env-entry-name>db/database</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>bzklink</env-entry-value>
    </env-entry>
    <env-entry>
        <env-entry-name>db/username</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>root</env-entry-value>
    </env-entry>

    <env-entry>
        <env-entry-name>app/domain</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>http://localhost:8080/</env-entry-value>
    </env-entry>
</web-app>
